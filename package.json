{
  "name": "my-project",
  "version": "1.0.0",
  "description": "Curso Rafael Manguinho - Node + Clean Code",
  "main": "src/main/server.js",
  "scripts": {
    "start": "node src/main/index.js",
    "dev": "nodemon src/main/index.js",
    "test": "jest --watchAll --silent --noStackTrace --colors --watchPathIgnorePatterns=tmp,.cache,.mongodb-binaries",
    "test:unit": "npm test --  --watchAll -c jest-unit-config.js",
    "test:integration": "npm test -- --watchAll -c jest-integration-config.js",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "standard --fix"
    ]
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "keywords": [],
  "author": "Jonas Santos",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.13.3",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "fast-glob": "^3.3.3",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.0.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.0.2",
    "prettier": "^3.2.4",
    "standard": "^17.1.2",
    "supertest": "^7.1.1",
    "winston": "^3.17.0"
  }
}
